      function askNameMasked() {
        let name = prompt('What is your name?');
        if (confirm('Would you like to watch a video, ' + name + '?')){
          window.location = 'https://www.youtube.com/watch?v=bSjiDO5J56Q';
        } else {
          alert(name + ' cancelled.');
        }
      }
      let openMaskedVideo = document.querySelector('.maskedButton');
      openMaskedVideo.addEventListener('click', askNameMasked);
      
      function askNamePuppet() {
        let name = prompt('What is your name?');
        if (confirm('Would you like to watch a video, ' + name + '?')) {
          window.location = 'https://www.youtube.com/watch?v=wDM2p2wKRYo';
        } else{
          alert(name + ' cancelled.');
        }
      }
      let puppetVideo = document.querySelector('.shadowPuppetButton');
      puppetVideo.addEventListener('click', askNamePuppet);
    </script>
